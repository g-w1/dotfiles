{
  "coc.preferences.formatOnSaveFiletypes": [
    "rust",
    "json",
    "c",
    "cpp",
    "zig"
  ],
  "coc.preferences.bracketEnterImprove": true,
  "coc.preferences.jumpCommand": "tabe",
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": [
        "haskell",
        "lhaskell"
      ]
    },
    "zls": {
      "command": "zls",
      "filetypes": [
        "zig"
      ]
    }
  }
}
